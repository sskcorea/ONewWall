doctype html
html(lang='en')
  head
    title #{name} &raquo; O'NewWall
    include header
  body
    .container
      .row
        .span10.offset1.main-column
          include menu
          .row-fluid.main-content
            .span9
              h1.page-title.screen-adjusting-text
                | #{name}
                &nbsp;
                if(birthday)
                  //small b&period; #{birthday}
              .page-subtitle &NonBreakingSpace;
              .row-fluid.content-container.dz_image_with_content
                .span10
                  div
                    .non-dzwplb-wrapper
                      img(src='#{image}', style="max-width:800px; max-height:600px;")
                      .dzwplb-captions
                        .dzwplb-caption.dzwplb-caption-active(data-captionid='58277')
                          small
                    .dz-image-content
                      each line in desc
                        p
                          | #{line.text}
                        p &NonBreakingSpace;
                .span2
                  .pagination.pagination-centered
            .span3
              .sidebar
                ul.nav.nav-pills.nav-stacked
                  li
                    a(href='/artworks/#{name}') Artworks
                  li
                    a(href='#') Biography
          include footer
    include scripts
