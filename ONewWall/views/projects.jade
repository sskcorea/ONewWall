doctype html
html(lang='en')
  head
    title Projects &raquo; O'NewWall
    include header
  body
    .container
      .row
        .span10.offset1.main-column
          include menu
          .row-fluid.main-content
            .span9.focus-adjust
              h1.page-title.screen-adjusting-text Projects
              .row-fluid.content-container.exhibition-list
                form(action='/projects/year', method='get')
                    select(name='yr', onchange='return this.form.submit()')
                      - var years=['2014'];
                      each y in years
                        if (y === year) 
                          option(value=y, selected='selected') #{y}
                        else
                          option(value=y) #{y}
                each value, index in exhibitions
                  -if(index%2 === 0){  
                      .row-fluid
                        each exhibition in exhibitions.slice(index, index+2)
                          .span6.two-col-item
                            a(href='/projects/#{exhibition.year}/#{exhibition.title}', target='_self')
                              img.media-object(src='#{exhibition.image}')
                            .two-col-caption
                              dl
                                dt.text-large #{exhibition.title}
                                dd #{exhibition.date}
                  -}
          include footer
    include scripts