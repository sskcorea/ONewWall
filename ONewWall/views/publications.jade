doctype html
html(lang='en')
  head
    title Publications &raquo; O'NewWall
    include header
  body
    .container
      .row
        .span10.offset1.main-column
          include menu
          .row-fluid.main-content
            .span9.focus-adjust
              h1.page-title.screen-adjusting-text Publications
              .row-fluid.content-container.exhibition-list
                each value, index in exhibitions
                  -if(index%2 === 0){  
                      .row-fluid
                        each exhibition in exhibitions.slice(index, index+2)
                          .span6.two-col-item
                            a(href='/publications/#{exhibition.year}/#{exhibition.title}', target='_self')
                              img.media-object(src='#{exhibition.image}')
                            .two-col-caption
                              dl
                                dt.text-large #{exhibition.title}
                                dd #{exhibition.date}
                  -}
          include footer
    include scripts