doctype html
html(lang='en')
  head
    title Past Exhibitions &raquo; O'NewWall
    include header
  body
    .container
      .row
        .span10.offset1.main-column
          include menu
          .row-fluid.main-content
            .span9.focus-adjust
              h1.page-title.screen-adjusting-text
                a(href='/exhibitions/past') Past Exhibitions
              .page-subtitle &NonBreakingSpace;
              .row-fluid.content-container.exhibition-list
                .span10
                  form(action='/exhibitions/past/year', method='get')
                    select(name='yr', onchange='return this.form.submit()')
                      option(disabled='disabled', selected='selected') Select a year
                      option(value='2013') 2013
                      option(value='2012') 2012
                      option(value='2011') 2011
                each value, index in exhibitions
                  -if(index%2 === 0){  
                    .span11
                      .row-fluid
                        each exhibition in exhibitions.slice(index, index+2)
                          .span6.two-col-item
                            a(href='/exhibition/past/#{exhibition.year}/#{exhibition.title}', target='_self')
                              img.media-object(src='#{exhibition.image}')
                            .two-col-caption
                              dl
                                dt.text-large #{exhibition.title}
                                dd #{exhibition.date}
                  -}
              .row-fluid
                .span10
                  .pagination.pagination-centered
            include exhibitions_side
          include footer
    include scripts